<%= turbo_frame_tag dom_id(tweet_presenter.tweet) do%>
  <div class="tweet d-flex py-3 px-3">
    <div class="flex-shrink-0">
      <%= image_tag tweet_presenter.avatar, size: "48x48", class: "rounded-circle" %>
    </div>
    <div class="flex-grow-1 ms-3">
      <p class="mb-0">
        <span class="fw-bolder"><%= tweet_presenter.display_name  %></span>
        <span class="text-secondary">
        @<%= tweet_presenter.username  %> Â· <%= tweet_presenter.created_at %></span>
      </p>
      <p><%= tweet_presenter.body  %></p>

      <div class="d-flex justify-content-between align-items-center">
        <div>
          <%= link_to "#" do %>
            <%= image_tag "speech-bubble.png", size: "19x19" %>
            Replies 
          <% end %>
        </div>
        <div>
          <%= link_to "#" do %>
            <%= image_tag "retweet.png", size: "19x19" %>
            Retweet 
          <% end %>
        </div>
        <div>
          <%= link_to "#" do %>
            <%= image_tag "heart-unfilled.png", size: "19x19" %>
            Likes 
          <% end %>
        </div>
        <div>
          <%= link_to "#" do %>
            <%= image_tag "bar-chart.png", size: "19x19" %>
            Views 
          <% end %>
        </div>
        <div>
          <%= link_to "#" do %>
            <%= image_tag "share.png", size: "19x19" %>
            Share 
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>